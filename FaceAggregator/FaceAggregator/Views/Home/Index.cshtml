@{
    ViewBag.Title = "Welcome";
}

@if (!Request.IsAuthenticated)
{
    <div class="main">
        <h3>Have you been looking for easy tool to segregate your photos?</h3>
        <h3><b>You have found it!</b></h3>
        <h3>Log in with your Google account:</h3>
        <a href=@Url.Action("LoggedInIndex", "Home") class="btn btn-primary btn-lg">Log In &raquo;</a>
    </div>
}
else
{
    <div class="main">
        <h3><b>Here is what you have to do now:</b></h3>
        <ol>
            <li>Upload photos you want to segregate</li>
            <li>Upload photo of a person you would like to find</li>
            <li><b>Check out your results!</b></li>
        </ol>
        <h3 style="color: tomato">Restrictions:</h3>
        <ol>
            <li>The image file size should be larger than or equal to 1KB but no larger than 4MB.</li>
            <li>The detectable face size is between 36x36 to 4096x4096 pixels. The faces out of this range will not be detected."</li>
            <li>JPEG, PNG, GIF(the first frame), and BMP are supported.</li>
        </ol>
    </div>
}

