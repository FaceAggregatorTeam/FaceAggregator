<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div id="loader"></div>
    <div id="loading_bg"></div>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("FaceAggregator", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    @if (Request.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Upload photos", "UploadPhotos", "Upload")</li>
                        <li>@Html.ActionLink("Select person", "UploadFace", "Upload")</li>
                        <li>@Html.ActionLink("Results", "Index", "Results")</li>
                        <li>@Html.ActionLink("Log out", "LogOff", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <div class="container-fluid body-content">    
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - FaceAggregator</p>
        </footer>
    </div>
    <script>
        var loader = document.getElementById("loader");
        loader.style.visibility = "hidden";
    </script>
  
</body>
</html>
